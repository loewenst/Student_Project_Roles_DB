<%- include('../partials/header') %>

<h1 class="classindex"><%= project.name %></h1>

<h3 class="classindex">Description:</h3>
<p><%= project.description %></p>
</br></br>

<h3>Students</h3>
<% if(students) { %>
<table>
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Role</th>
      <th>Group</th>
    </tr>
  </thead>
  <tbody>
    <% students.forEach((s) => { %>
      <tr>
        <td><%= s.lastName %></td>
        <td><%= s.firstName %></td>
        <td><%= s.classes[classIndex(s)].projects[projectIndex(s)].role %></td>
        <td><%= s.classes[classIndex(s)].projects[projectIndex(s)].group %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } %>
  
  <a href="/classes/<%= theClass._id %>/projects/<%= project._id %>/edit">Add Students, Assign Roles and More</a>
  <form action="/classes/<%= theClass._id %>/projects/<%= project._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete Class</button>
  </form>

<%- include('../partials/footer') %>